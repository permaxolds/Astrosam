<body>
  <h1>PDF Kundli Generator</h1>
  <form id="kundliForm">
    <label for="name">Name:</label>
    <input type="text" id="name" required />
    
    <label for="dob">Date of Birth (YYYY-MM-DD):</label>
    <input type="date" id="dob" required />

    <label for="tob">Time of Birth (HH:MM):</label>
    <input type="time" id="tob" required />

    <label for="place">Place of Birth:</label>
    <input type="text" id="place" required />

    <button type="submit">Download Kundli PDF</button>
  </form>

  <script>
    const form = document.getElementById("kundliForm");
    form.addEventListener("submit", function (e) {
      e.preventDefault();
      const name = document.getElementById("name").value;
      const dob = document.getElementById("dob").value;
      const tob = document.getElementById("tob").value;
      const place = document.getElementById("place").value;

      const url = `https://astrokundli-backend.onrender.com/api/pdfkundli?name=${encodeURIComponent(name)}&dob=${dob}&tob=${tob}&place=${encodeURIComponent(place)}`;
      window.open(url, '_blank');
    });
  </script>
